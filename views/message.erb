<h2>message: <%= @message.name %></h2>
<h3>board: <%= @message.board.name %></h3>

<form action="/boards/<%= @message.board.id %>/messages/<%= @message.id %><%= @message.lyrics %><%= @message.writer %>" method="post">
  <input name="_method" type="hidden" value="patch">

  <label for="name">Rename message</label>
  <input id="name" name="name" type="text">

  <button type="submit">Update message</button>
</form>

<form action="/boards/<%= @message.board.id %>/messages/<%= @message.id %><%= @message.lyrics %><%= @message.writer %>" method="post">
  <input name="_method" type="hidden" value="delete">

  <button type="submit">Delete message</button>
</form>

<a href="/boards/<%= @message.board.id %>">Back to <%= @message.board.name %></a>
