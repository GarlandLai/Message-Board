<h1>Woodland Mists Festival</h1>

<h3>Available Stages</h3>

<% if @stages.any? %>
  <ul>
    <% @stages.each do |stage| %>
      <li><strong><%=stage.name%></strong>: <%=stage.artist%></li>
    <% end %>
  </ul>
<% else %>
  <p>There are currently shows.</p>
<% end %>

<a href="/stages/new">Add a new stage</a>


<!-- Needs to go into it's own page? -->
<form action="/stages_search" method='post'>
  <div class="form-group">
    <label for="search">Search</label>
    <input type="text" name="search" class="form-control" id="search">
  </div>
  <button type="submit" class="btn btn-info">Search</button>
</form>

<br>
<h3>Details Pages</h3>

 <% @stages.each do |stage| %>
  <li><a href="/stages/<%= stage.id %>"><%=stage.name %></a></li>
  <% end %>
