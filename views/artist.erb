<h2>artist: <%= @artist.name %></h2>
<h3>stage: <%= @artist.stage.name %></h3>

<form action="/stages/<%= @artist.stage.id %>/artists/<%= @artist.id %><%= @artist.lyrics %><%= @artist.writer %>" method="post">
  <input name="_method" type="hidden" value="patch">

  <label for="name">Rename artist</label>
  <input id="name" name="name" type="text">

  <button type="submit">Update artist</button>
</form>

<form action="/stages/<%= @artist.stage.id %>/artists/<%= @artist.id %><%= @artist.lyrics %><%= @artist.writer %>" method="post">
  <input name="_method" type="hidden" value="delete">

  <button type="submit">Delete artist</button>
</form>

<a href="/stages/<%= @artist.stage.id %>">Back to <%= @artist.stage.name %></a>
