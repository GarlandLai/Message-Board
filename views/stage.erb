<h4>Stage Name: <%= @stage.name %></h4>
<h4>Stage Artist: <%= @stage.artist %></h4>

<h3>Stages</h3>

<% if @stage.artists %>
    <ul>
      <% @stage.artists.each do |song| %>
        <li><a href="/stages/<%= @stage.id %>/artist/<%= artist.id %>"><%= artist.name %></a></li>
      <% end %>
    </ul>
  <% else %>
    <p>There are no artists listed for this show yet.</p>
  <% end %>

<h4>Add an artist:</h4>

<form action="/stages/<%= @stage.id %>/artists" method="post">
  <div class="form-group">
    <label for="artist_name">artist name</label>
    <input id="artist_name" name="artist_name" class="form-control" type="text">
  </div>
    <button type="submit" class="btn">Add artist</button>
</form>

<p><a href="/stages/<%= @stage.id %>/edit">Change stage</a></p>
<a href = "/stages">Return to stage list</a>
